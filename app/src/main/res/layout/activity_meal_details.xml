<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MealDetails">

    <TextView
        android:id="@+id/textViewCookName"
        android:layout_width="97dp"
        android:layout_height="20dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="182dp"
        android:layout_marginBottom="25dp"
        android:text="Cook: "
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textViewIngredients"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewMealName"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="182dp"
        android:layout_marginBottom="25dp"
        android:text="Meal"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textViewAllergens"
        app:layout_constraintStart_toEndOf="@+id/textViewCookName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewRating"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="182dp"
        android:layout_marginBottom="173dp"
        android:text="Rating"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btnIncreaseQty"
        app:layout_constraintStart_toEndOf="@+id/textViewMealName"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDecreaseQty"
        android:layout_width="54dp"
        android:layout_height="41dp"
        android:layout_marginStart="171dp"
        android:layout_marginBottom="316dp"
        android:background="@drawable/button_bg"
        android:text="-"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:translationY="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editTextQty"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnIncreaseQty"
        android:layout_width="54dp"
        android:layout_height="41dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="316dp"
        android:background="@drawable/button_bg"
        android:text="+"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextQty"
        app:layout_constraintTop_toBottomOf="@+id/textViewRating" />

    <EditText
        android:id="@+id/editTextQty"
        android:layout_width="44dp"
        android:layout_height="0dp"
        android:layout_marginTop="374dp"
        android:layout_marginBottom="312dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnIncreaseQty"
        app:layout_constraintStart_toEndOf="@+id/btnDecreaseQty"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSubtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="171dp"
        android:layout_marginEnd="181dp"
        android:layout_marginBottom="12dp"
        android:text="Subtotal: "
        app:layout_constraintBottom_toTopOf="@+id/btnDecreaseQty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewMealPrice"
        android:layout_width="135dp"
        android:layout_height="26dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="378dp"
        android:text="Price"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewIngredients"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textViewDesc"
        android:layout_width="92dp"
        android:layout_height="76dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="28dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textViewMealPrice"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewIngredients"
        android:layout_width="92dp"
        android:layout_height="76dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="432dp"
        android:text="Ingredients"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewAllergens"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewAllergens"
        android:layout_width="92dp"
        android:layout_height="76dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="160dp"
        android:text="Allergens"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMealName" />

    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="126dp"
        android:layout_height="51dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="116dp"
        android:background="@drawable/button_bg"
        android:text="Add To Cart"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextQty" />

</androidx.constraintlayout.widget.ConstraintLayout>