<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Activity.MealDetails">

    <TextView
        android:id="@+id/textViewCookName"
        android:layout_width="97dp"
        android:layout_height="20dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="182dp"
        android:text="Cook: "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewMealName"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="182dp"
        android:text="Meal"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textViewCookName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewRating"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="182dp"
        android:layout_marginBottom="173dp"
        android:text="Rating"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnIncreaseQty"
        app:layout_constraintStart_toEndOf="@+id/textViewMealName"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDecreaseQty"
        android:layout_width="54dp"
        android:layout_height="41dp"
        android:layout_marginStart="171dp"
        android:layout_marginBottom="316dp"
        android:background="@drawable/button_bg"
        android:text="-"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:translationY="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editTextQty"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnIncreaseQty"
        android:layout_width="54dp"
        android:layout_height="41dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="316dp"
        android:background="@drawable/button_bg"
        android:text="+"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextQty" />

    <EditText
        android:id="@+id/editTextQty"
        android:layout_width="81dp"
        android:layout_height="44dp"
        android:layout_marginTop="374dp"
        android:layout_marginBottom="312dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnIncreaseQty"
        app:layout_constraintStart_toEndOf="@+id/btnDecreaseQty"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSubtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="16dp"
        android:text="Subtotal: "
        app:layout_constraintBottom_toTopOf="@+id/btnDecreaseQty"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewMealPrice"
        android:layout_width="111dp"
        android:layout_height="25dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="380dp"
        android:text="Price"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewIngredients" />

    <TextView
        android:id="@+id/textViewDesc"
        android:layout_width="92dp"
        android:layout_height="76dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/grey_unfilled_box"
        android:padding="10dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btnIncreaseQty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRating" />

    <TextView
        android:id="@+id/textViewIngredients"
        android:layout_width="92dp"
        android:layout_height="76dp"
        android:layout_marginStart="37dp"
        android:layout_marginBottom="432dp"
        android:background="@drawable/grey_unfilled_box"
        android:padding="10dp"
        android:text="Ingredients"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewAllergens"
        android:layout_width="92dp"
        android:layout_height="76dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/grey_unfilled_box"
        android:padding="10dp"
        android:text="Allergens"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textViewSubtotal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMealName" />

    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="126dp"
        android:layout_height="51dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="116dp"
        android:background="@drawable/button_bg"
        android:text="Add To Cart"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextQty" />

</androidx.constraintlayout.widget.ConstraintLayout>