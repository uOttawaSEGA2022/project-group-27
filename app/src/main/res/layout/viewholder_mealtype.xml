<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="90dp"
    android:layout_height="110dp"
    android:layout_margin="8dp"
    android:background="@drawable/cuis_background2">

    <ImageView
        android:id="@+id/mealTypeIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/breakfast" />

    <TextView
        android:id="@+id/mealTypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="title"
        android:textColor="#91959A"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/mealTypeIcon"
        app:layout_constraintStart_toStartOf="@+id/mealTypeIcon"
        app:layout_constraintTop_toBottomOf="@+id/mealTypeIcon" />
</androidx.constraintlayout.widget.ConstraintLayout>