<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mealCard"
    android:layout_width="350dp"
    android:layout_height="300dp"
    android:layout_gravity="center|top"
    android:layout_margin="8dp"
    android:alpha="1"
    android:clipToPadding="false"
    android:translationY="100dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="350dp"
        android:layout_height="160dp"
        android:layout_gravity="center|top"
        android:layout_margin="8dp"
        android:alpha="1"
        android:background="@drawable/cuis_background2"
        android:backgroundTint="#F3F3F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewRating"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:drawableStart="@drawable/ic_rate"
            android:gravity="center|center_vertical"
            android:text="5.0"
            android:textColor="@color/purple_200"
            app:drawableTint="#e9982c"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textViewIngredients"
            android:layout_width="86dp"
            android:layout_height="88dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#91959A"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="62dp" />

        <TextView
            android:id="@+id/textViewAllergens"
            android:layout_width="86dp"
            android:layout_height="88dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#91959A"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="247dp"
            tools:layout_editor_absoluteY="61dp" />

        <TextView
            android:id="@+id/textViewMealDesc"
            android:layout_width="86dp"
            android:layout_height="88dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#91959A"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="61dp" />

        <TextView
            android:id="@+id/textViewMealName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageViewMealType"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:scaleX="2"
        android:scaleY="2"
        android:translationX="140dp"
        android:translationY="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/breakfast" />

    <TextView
        android:id="@+id/textViewCuisine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="304dp"
        android:layout_marginBottom="1dp"
        android:text="Cuisine"
        android:textColor="@color/purple_200"
        android:textSize="20dp"
        android:textStyle="bold"
        android:translationX="30dp"
        android:translationY="-10dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>