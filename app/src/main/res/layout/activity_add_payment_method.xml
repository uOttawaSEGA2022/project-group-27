<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    tools:context=".AddPaymentMethod">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="130px"
            android:paddingBottom="100px"
            android:text="Add your payment information"
            android:textColor="#B6B6B6"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/cardNumber"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:hint="Card Number"
            android:inputType="number"
            android:paddingLeft="25px"
            android:textColorHint="#D6D3D3"
            android:textSize="14sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <EditText
            android:id="@+id/nameOnCard"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:hint="Name on Card"
            android:inputType="textPersonName"
            android:paddingLeft="25px"
            android:textColorHint="#D6D3D3"
            android:textSize="14sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <EditText
            android:id="@+id/expirationDate"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:hint="Expiration Date"
            android:inputType="date"
            android:maxLength="4"
            android:paddingLeft="25px"
            android:textColorHint="#D6D3D3"
            android:textSize="14sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <EditText
            android:id="@+id/CVV"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:hint="CVV"
            android:inputType="number"
            android:paddingLeft="25px"
            android:textColorHint="#D6D3D3"
            android:textSize="14sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:paddingTop="40px"
            android:paddingBottom="50px"
            android:text="I have read and agreed to the terms and conditions"
            android:textColor="#B6B6B6"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/completeSignUp"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:text="SIGN UP"
                android:textAlignment="center"
                android:textColor="@color/grey_100"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>